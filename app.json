{
  "expo": {
    "name": "Oral Scanner",
    "slug": "capstone-ai-system",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/tooth_logo.png",
    "scheme": "capstoneaisystem",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.crstiann.oralscanner"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/tooth_logo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": false,
      "package": "com.crstiann.oralscanner",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/tooth_logo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/tooth_logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera for dental image capture.",
          "microphonePermission": false,
          "recordAudioAndroid": false
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you select dental images for analysis.",
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera for dental image capture."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photo library to select dental images.",
          "savePhotosPermission": "Allow $(PRODUCT_NAME) to save dental analysis results to your photo library.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}